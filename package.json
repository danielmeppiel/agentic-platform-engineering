  },
  "homepage": "https://github.com/danielmeppiel/agentic-platform-engineering#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.0",
    "libsodium-wrappers": "^0.7.15",
    "octokit": "^4.1.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
